    .banner {
        width: 100%;
        max-width: 600px; /* Define a largura máxima do banner */
        height: 100vh; /* Altura automática para ajustar ao tamanho da imagem */
        overflow: hidden; /* Oculta as imagens que ultrapassam o container */
        position: relative; /* Para posicionar as imagens */
    }

    .banner img {
        width: 100%; /* Assegura que a imagem preencha completamente o container */
        height: auto; /* Altura automática */
        display: none; /* Inicialmente, todas as imagens estão escondidas */
        position: absolute; /* Para posicionar as imagens sobrepostas */
        top: 0; /* Alinha as imagens no topo */
        left: 0; /* Alinha as imagens à esquerda */
    }

    .banner img.active {
        display: block; /* Mostra a imagem ativa */
    }







    .text {
        display: none; /* Inicialmente, esconde todos os textos */
    }

    .text.active {
        display: inline; /* Mostra o texto ativo */
    }
